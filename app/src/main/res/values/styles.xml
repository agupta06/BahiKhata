<resources>

    <!-- Base application theme -->
    <!-- Light / Day Mode theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--color-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundColor">@color/layout_background_color</item>
        <item name="textColor">@color/text_color</item>
        <item name="actionModeBackground">@color/colorPrimary</item>
        <item name="actionMenuTextColor">@color/text_color_contrast</item>

        <!--others-->
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="actionModeCloseButtonStyle">@style/contextual_action_bar_close_button</item>
    </style>

    <!-- Dark / Night Mode theme -->
    <style name="DarkAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--color-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundColor">@color/layout_background_color</item>
        <item name="textColor">@color/text_color</item>
        <item name="actionModeBackground">@color/colorPrimary</item>
        <item name="actionMenuTextColor">@color/text_color_contrast</item>

        <!--others-->
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="actionModeCloseButtonStyle">@style/contextual_action_bar_close_button</item>
    </style>

    <!-- Contextual ActionBar back arrow -->
    <style name="contextual_action_bar_close_button" parent="Widget.AppCompat.Light.ActionButton.CloseMode">
        <item name="android:tint">@color/colorWhite</item> <!-- whatever color -->
    </style>

    <!--Theme swtich transition effect-->
    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <!--Tab Layout Style-->
    <style name="TabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--Button Outline-->
    <style name="Button.Outlined" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@drawable/bg_btn_outlined</item>
    </style>

    <!--Button Filled-->
    <style name="Button.Filled" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@drawable/bg_btn_filled</item>
    </style>

    <!--Button Borderless-->
    <style name="Button.Borderless" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@drawable/bg_btn_borderless</item>
    </style>

</resources>
