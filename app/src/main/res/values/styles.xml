<resources>

    <!-- Base application theme -->
    <!-- Light / Day Mode theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundColor">#fcfcfc</item>
        <item name="cardBackgroundColor">#ffffff</item>
        <item name="textColor">#808080</item>
        <item name="tintColor">#000000</item>
        <item name="buttonColor">#2196F3</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <!-- Dark / Night Mode theme -->
    <style name="AppDarkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#212121</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundColor">#303030</item>
        <item name="cardBackgroundColor">#424242</item>
        <item name="textColor">#ffffff</item>
        <item name="tintColor">#ffffff</item>
        <item name="buttonColor">#2196F3</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <!--Theme swtich transition effect-->
    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <!--Tab Layout Style-->
    <style name="TabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--Button Outline-->
    <style name="Button.Outlined" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@drawable/bg_btn_outlined</item>
    </style>

    <!--Button Filled-->
    <style name="Button.Filled" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@drawable/bg_btn_filled</item>
    </style>

    <!--Button Borderless-->
    <style name="Button.Borderless" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@drawable/bg_btn_borderless</item>
    </style>
</resources>
