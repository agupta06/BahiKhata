<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="UserSignInFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp260"
        android:layout_below="@id/forFrame"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="@dimen/dp30"
                    android:text="Phone Sign In"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp20" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp2"
                android:layout_marginLeft="@dimen/dp30"
                android:layout_marginTop="@dimen/dp10"
                android:background="@color/red" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp15"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/phoneInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp30"
                android:layout_marginRight="@dimen/dp30">

                <EditText
                    android:id="@+id/userPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Phone Number"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:textColorHint="@color/black"
                    android:textSize="@dimen/dp14" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/oneTimePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/phoneInput"
                android:layout_marginLeft="@dimen/dp30"
                android:layout_marginRight="@dimen/dp30"
                android:visibility="gone">

                <EditText
                    android:id="@+id/signInOtp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="One Time Password (OTP)"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:textColorHint="@color/black"
                    android:textSize="@dimen/dp14" />

            </android.support.design.widget.TextInputLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/actionButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/form"
                android:layout_marginTop="@dimen/dp32"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/otpRequestButton"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp36"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/high_emphasis_button"
                    android:elevation="@dimen/dp2"
                    android:text="Request OTP"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/dp14" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>